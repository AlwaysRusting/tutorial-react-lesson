root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.{ts,tsx}]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{md,markdown}]
insert_final_newline = true
trim_trailing_whitespace = false

[*.bat]
charset = sjis
end_of_line = crlf
insert_final_newline = true

[*.json]
insert_final_newline = true

[Makefile]
indent_size = 2
indent_style = space